rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /users/{userId} {
      // Allow any authenticated user to read any user's profile.
      // This is required for the Skill Directory (Skill Finder) feature,
      // which searches across all users' skill ratings to group them by proficiency.
      allow read: if request.auth != null;

      // Only the owner can write to their own document.
      allow write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
